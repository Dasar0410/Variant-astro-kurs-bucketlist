---
interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---
<a href={href} class="link-card">
	<h2>{title}</h2>
</a>

<style>
.link-card {
	list-style: none;
	display: block;
	padding: 15px;
	background-color: #ffcc00; /* Bright yellow background */
	border: 3px solid #ff00ff; /* Magenta border */
	border-radius: 10px;
	margin-bottom: 15px;
	text-align: center;
	text-decoration: none;
	color: #0000ff; /* Bright blue text */
	font-family: 'Comic Sans MS', cursive, sans-serif; /* Retro font */
	box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.3);
	transition: background-color 0.3s, transform 0.3s;
}
.link-card:hover {
	background-color: #ff9900; /* Darker yellow on hover */
	transform: scale(1.05); /* Slight zoom on hover */
}
.link-card h2 {
	margin: 0;
	font-size: 1.75rem;
}
.link-card p {
	margin: 10px 0 0;
	font-size: 1rem;
}
</style>
</style>
